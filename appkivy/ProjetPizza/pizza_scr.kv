#:import utils kivy.utils
#:set color1 "#007835"
#:set color2 "#C8C8C8"
MainWidget:

<CoverImage@CoverBehavior+Image>:
    reference_size: self.texture_size

<TitleLabel@FitLabel>:
    font_size:dp(22)
    bold:True
    padding:dp(16),dp(3) # largeur,hauteur
    canvas.before:
        Color:
            rgb:utils.get_color_from_hex(color1)
        Rectangle:
            pos:self.pos
            size:self.size


<MainWidget>:
    recycleView:recycleView # definition d'une variable
    CoverImage:# on remplace Image par CoverImage
        source:"images/menu_background.jpg"
        # allow_stretch:True
        # keep_ratio:False
        canvas:
            Color:
                rgba:0,0,0,.6
            Rectangle:
                pos:self.pos
                size:self.size

    BoxLayout:
        orientation:"vertical"
        Image:
            source:"images/small_logo.png"
            size_hint:None,None
            size:dp(150),dp(60)
            allow_stretch:True
            pos_hint:{ "center_x":.5}
        TitleLabel:
            text:"Les pizzas"
        BoxLayout:
            padding:dp(20),dp(20)
            RecycleView:
                # size:root.size
                id:recycleView
                viewclass: 'PizzaWidget'
                RecycleBoxLayout:
                    default_size: None, dp(58)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing:dp(16)
        Label:
            text:root.error_str
            size_hint:1,None
            height:dp(30) if len(root.error_str) > 0 else dp(0)
            font_size:dp(12)
            bold:True
            canvas.before:
                Color:
                    rgb:1,0,0,0
                Rectangle:
                    pos:self.pos
                    size:self.size

<LeftAlignLabel@Label>:
    text_size:self.size
    halign:"left"
    valign:"center"
    canvas.before:
        Color:
            rgb:utils.get_random_color(color1)
            rgba:0,0,0,0
        Rectangle:
            pos:self.pos
            size:self.size


<FitLabel@Label>:
    size_hint:None,None
    size:self.texture_size

<Badge@FitLabel>:# herite de FitLabel
    color:0,0,0,1
    bold:True
    font_size:dp(10)
    padding:dp(8),dp(3)
    canvas.before:
        Rectangle:
            source:"images/badge.png"
            pos:self.pos
            size:self.size


<PizzaWidget>:
    BoxLayout: # on peut limiter la largeur de ce BoxLayout sur size_hint_max_x ou size_hint_max_y (hauteur)
        size_hint_max_x:dp(300)
        size_hint_min_x:dp(200)
        orientation:"vertical"
        BoxLayout:
            spacing:dp(10)
            FitLabel:
                text:root.nom
                font_sze:dp(22)
                bold:True
            Badge:
                text:"VEGETARIENNE" if root.vegetarienne else ""
        LeftAlignLabel:
            text:root.ingredients
            color:utils.get_color_from_hex(color2)
    FitLabel:
        text:str(root.prix)+" â‚¬"
        font_size:dp(20)
        color:utils.get_color_from_hex(color1)
        pos_hint : {"top":.9}

