<CanvasExemple1>:
    canvas:
        Rectangle:
            pos:self.center_x-s/2,self.center_y-s/2
            size:s,s
        Ellipse:
            pos:90,200
            size:s,s/2
        Line:
            points:(0,0,self.width/4,100,self.width/2,0,self.width*3/4,100,self.width,0)
            width:2


# ==========================================================================================
<CanvasExemple2>:
    canvas:
        Line:
            points:(self.width/2,0,self.width/2,self.width)
            width:2
        Line:
            points:(0,self.height/2,self.width,self.height/2)
            width:2


# ==========================================================================================
<CanvasExemple3>:
    canvas:
        Color:
            rgba:1,0,0,.7
        Line:
            circle:(200,200,100) # centre_x,centre_y,rayon
            width:2
        Line:
            ellipse:(500,300,100,200) # centre_x,centre_y,rayon_x,rayon_y
            width:2
        Color:
            rgba:0,0,1,1
        Line:
            rectangle:(800,100,300,200) # x,y,w,h
            width:2


