#PageLayoutExemple: # interface principale
<PageLayoutExemple@PageLayout>:
    MainVidget:
    BoxLayoutExemple:
        canvas.before:
            Color:
                rgb:0,0,1
            Rectangle:
                size:self.size
                pos:self.pos
    AnchorLayoutExemple:
        canvas.before:
            Color:
                rgb:0,0,1
            Rectangle:
                size:self.size
                pos:self.pos
    GridLayoutExemple:
        canvas.before:
            Color:
                rgb:0,0,1
            Rectangle:
                size:self.size
                pos:self.pos

#ScrollViewExemple:
<ScrollViewExemple@ScrollView>:
    StackLayoutExemple:
        size_hint:1,None
        height:self.minimum_height


#StackLayoutExemple:
<StackLayoutExemple>:
    # "left-right,top-bottom"
    orientation:"lr-tb"
    # gauche haut droite bas
    padding:("20dp","20dp","20dp","20dp")
    spacing:"20dp","20dp" # horizontage, verticale
    Button:
        text:"A"
        size_hint:.1,.1
    Button:
        text:"B"
        size_hint:.1,.1
    Button:
        text:"C"
        size_hint:.1,.1
    Button:
        text:"D"
        size_hint:.1,.1




#GridLayoutExemple:
