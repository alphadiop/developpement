    rows:2
    cols :2
    Button:
        text:"A"
    Button:
        text:"B"
    Button:
        text:"C"
    Button:
        text:"D"



#AnchorLayoutExemple:
<AnchorLayoutExemple>:
    # right,left,center
    # bottom,top,center
    anchor_x:"center"
    anchor_y:"top"
    BoxLayout
        size_hint:.1,.1 # .1 veut dire 10%
        Button:
            text:"A"
        Button:
            text:"B"
        Button:
            text:"C"
        Button:
            text:"D"


#BoxLayoutExemple:
<BoxLayoutExemple>:
    orientation : "vertical"
    Button:
        text:"A"
        size_hint:None,None
        width:"100dp"
        height:"60dp"
    Button:
        size_hint:None,None
        size : "100dp","60dp"
        text:"B"
    Button:
        size_hint:1,0.5
        text:"C"
    Button:
        size_hint:.5,None
        height:"60dp"
        text:"D"
    Button:
        size_hint:None,0.5
        width:"100dp"
        text:"E"
    Button:
        size_hint:.75,1
        # x,right,center_x
        # y,top,center_y
        pos_hint:{"x":.5}
        text:"F"
    Button:
        size_hint:.5,1
        # x,right,center_x
        # y,top,center_y
        # pos_hint:{"right":.5}
        text:"G"
    Button:
        text:"H"
        size_hint:.5,.5
        # x,right,center_x
        # y,top,center_y
        pos_hint:{"center_x":.5}
    Button:
        text:"I"
        size_hint:.5,.5
        # x,right,center_x
        # y,top,center_y
        pos_hint:{"right":.5}
    Button:
        text:"J"
        size_hint:.5,.5
        # x,right,center_x
        # y,top,center_y
        pos_hint:{"x":.5}
    BoxLayout:
        orientation:"horizontal"
        Button:
            text:"A1"
        Button:
            text:"A2"
        Button:
            text:"A3"


