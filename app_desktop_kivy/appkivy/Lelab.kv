<MenuPrincipal@BoxLayout>:# veut dire que la classe MenuPrincipal herite de BoxLayout
    orientation:"vertical"
    Button:
        text:"Layout"
        on_press:app.manager.push("PageLayoutExemple")
    Button:
        text:"Widget"
        on_press:app.manager.push("WidgetsExemple")
    Button:
        text:"Images"
        on_press:app.manager.push("ImagesExemple")
    Button:
        text:"Tab"
        on_press:app.manager.push("LayoutExemplesTabs")
    Button:
        text:"Canvas"
        on_press:app.manager.push("CanvasExemplesTabs") # attention "Exemples" est un écran à definir dans MyScreenManager


<MyScreenManager>:
    Screen:
        name:"MenuPrincipal"
        MenuPrincipal: # appelle de ma classe "MenuPrincipal" heritant de BoxLayout
    Screen:
        name:"WidgetsExemple"
        BoxLayoutWithActionBar:# developper cote python
            title:"Widgets"
            WidgetsExemple:
    Screen:
        name:"PageLayoutExemple"
        BoxLayoutWithActionBar:# developper cote python
            title:"Layout"
            PageLayoutExemple:
    Screen:
        name:"ImagesExemple"
        BoxLayoutWithActionBar:# developper cote python
            title:"Images"
            ImagesExemple:
    Screen:
        name:"LayoutExemplesTabs"
        BoxLayoutWithActionBar:# developper cote python
            title:"Tab"
            LayoutExemplesTabs:
    Screen:
        name:"CanvasExemplesTabs"
        BoxLayoutWithActionBar:# developper cote python
            title:"Canvas"
            CanvasExemplesTabs:# appelle de la classe CanvasExemplesTabs definie dans "canvas_exemples.kv" comme etant l'écran principale
# ====================================================================================================================
    Screen:
        name:"Screen1"
        BoxLayout:
